<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/gradientDrawble">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <stroke
                android:width="@dimen/stroke_size"
                android:color="@color/black_overlay" />
            <size
                android:width="@dimen/profile_size"
                android:height="@dimen/profile_size" />
            <solid android:color="@color/camera_background_color" />
        </shape>
    </item>
    <item android:bottom="15dp">
        <bitmap
            android:gravity="center"
            android:src="@mipmap/btn_camera" />
    </item>
</layer-list>
