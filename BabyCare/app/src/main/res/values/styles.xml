<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="default_bottom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_vertical</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="default_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="default_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="default_bottom_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/register_small_text</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="action_button">
        <item name="android:padding">@dimen/actions_padding_button</item>
        <item name="android:layout_height">@dimen/actions_icon_height</item>
        <item name="android:layout_width">@dimen/actions_icon_width</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="FullscreenTheme" parent="TranslucentTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
